# =========================
# Exemple de fichier .env
# =========================

# --- Configuration du serveur ---
PORT=3000
ENV=development

# --- Configuration Telegram ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# --- Configuration Mistral AI ---
MISTRAL_API_KEY=your_mistral_api_key_here

# --- Configuration de la base de données ---
# Mettre à true pour utiliser l'adaptateur mémoire (développement)
USE_MEMORY_ADAPTER=true

# --- Configuration AWS (pour production/déploiement) ---
AWS_REGION=eu-west-3
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
DYNAMO_TABLE=chatbot-conversations
# --- Configuration de l'environnement ---
# Définir l'environnement (development, production, etc.)
ENV_NAME=Djennhya